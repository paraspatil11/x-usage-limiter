{
  "manifest_version": 3,
  "name": "X Usage Tracker",
  "version": "1.0",
  "description": "Track and limit your daily time on X (Twitter)",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
  "*://x.com/*",
  "*://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/alarm-clock.png",
      "48": "icons/alarm-clock.png",
      "128": "icons/alarm-clock.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/alarm-clock.png",
    "48": "icons/alarm-clock.png",
    "128": "icons/alarm-clock.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.js", "blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
